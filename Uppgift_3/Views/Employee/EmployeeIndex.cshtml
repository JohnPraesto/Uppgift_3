@model IEnumerable<Uppgift_3.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<div class="mb-3">
    <a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-primary">Create New Employee</a>
</div>

<div class="search-section mb-3">
    <form asp-action="EmployeeIndex" method="get" class="row">
        <div class="col-md-8">
            <input type="text" name="searchString" value="@ViewContext.HttpContext.Request.Query["searchString"]" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Is Admin</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.IsAdmin.ToString()</td>
                <td>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.EmployeeId">Details</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

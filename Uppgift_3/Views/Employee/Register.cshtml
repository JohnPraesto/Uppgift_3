@{
    Layout = "_Layout";
}

@model Uppgift_3.Models.Employee

<h2>Register New Employee</h2>

<form asp-action="Register" method="post">
    <div class="form-floating mb-3">
        <input asp-for="EmployeeName" class="form-control" placeholder="Employee Name" />
        <label asp-for="EmployeeName" class="form-label">Employee Name</label>
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
        <label asp-for="Password" class="form-label">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
        <label asp-for="IsAdmin" class="form-check-label">Is Admin</label>
    </div>
    <button type="submit" class="btn btn-primary">Register Employee</button>
</form>


@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<form asp-action="Login" method="post">
    <div class="form-floating mb-3">
        <input type="text" name="employeeName" class="form-control" placeholder="Name Name" required />
        <label>Employee Name</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" name="password" class="form-control" placeholder="Password" required />
        <label>Password</label>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>

    <div class="mt-3">
        <a asp-controller="Employee" asp-action="Register">Register New User</a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
    }
</form>

@model Uppgift_3.Models.Incident

@{
    ViewData["Title"] = "Add Incident";
}

<h2>Add Incident</h2>

<form asp-action="AddIncident" method="post">
    <div class="form-group">
        <label asp-for="DriverID" class="control-label"></label>
        <input asp-for="DriverID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeOfIncident" class="control-label"></label>
        <input asp-for="TimeOfIncident" class="form-control" />
        <span asp-validation-for="TimeOfIncident" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <a asp-action="DriverIndex" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

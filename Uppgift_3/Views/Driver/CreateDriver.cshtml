@model Uppgift_3.Models.Driver

@{
    ViewData["Title"] = "Create Driver";
}

<h2>Create New Driver</h2>

<form asp-action="CreateDriver">
    <div class="form-group">
        <label asp-for="DriverName"></label>
        <input asp-for="DriverName" class="form-control" />
        <span asp-validation-for="DriverName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a asp-controller="Driver" asp-action="DriverIndex">Back to List</a>
</div>
